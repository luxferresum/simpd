{{#with model as |mpd|}}
	{{mpd.volume}}
	<button {{action "pause" mpd}}>pause</button>
	<button {{action "play" mpd}}>play</button>
	{{mpd.state}}

	<ul>
		{{#each mpd.rootDirs as |d|}}
			<li>
				{{d.directory}}
				<ul>
					{{#each d.subDirs as |s|}}
						<li>
							{{s.directory}} {{s.subDirs.length}}

							<ul>
								{{#each s.subDirs as |x|}}
									<li>{{x.directory}}</li>
								{{/each}}
							</ul>
						</li>
					{{/each}}
				</ul>
			</li>
		{{/each}}
	</ul>
{{/with}}
